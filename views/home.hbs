{{> userHeader}}
<main>
	{{> userNavigation}}
	<section>
		<h1>Your letters</h1>
		{{#each letter}}
		<article>
			<header>
				<img src={{this.stamp.src}} alt={{this.stamp.alt}}>
				<h2>{{this.title}}</h2>
				<span>{{this.city}}, {{this.country}}</span>
			</header>
			<p>{{this.content}}</p>
		</article>
		{{/each}}
	</section>
	<section>
		<h2>Received letters</h2>
		{{#if mail}}
		{{#each mail}}
		<article>
			<header>
				<img src={{this.stamp.src}} alt={{this.stamp.alt}}>
				<span>{{this.name}}, {{this.age}}</span>
				<h2>{{this.title}}</h2>
				<span>{{this.city}}, {{this.country}}</span>
			</header>
		</article>
		{{/each}}
		{{else}}
		<p>You haven't received any mail yet.</p>
		{{/if}}
	</section>
</main>